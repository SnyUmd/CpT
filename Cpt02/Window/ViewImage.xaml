<Window x:Class="CpT.ViewImage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CpT"
        MouseLeftButtonDown="mouseL_Bdown"
        MouseDoubleClick="MouseDclick"
        KeyDown="keyDown"
        Closed="close"
        mc:Ignorable="d"
        Title="ViewImage" Height="450" Width="800" AllowsTransparency="True" WindowStyle="None">
    <Grid Background="#FF0097FF">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="1"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="1"/>
        </Grid.RowDefinitions>

        <Image Grid.Row="1" Grid.Column="1" x:Name="img"/>
        <Canvas Background="Blue"/>
    </Grid>
</Window>
